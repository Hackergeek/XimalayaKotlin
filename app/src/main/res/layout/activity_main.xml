<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.TabLayout
            android:id="@+id/id_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            app:tabIndicatorColor="@color/tab_selected"
            app:tabBackground="@android:color/transparent"
            app:tabGravity="center"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/id_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_tab_layout"
            android:layout_above="@id/id_control_zone"/>

    <RelativeLayout
            android:id="@+id/id_control_zone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/id_play_bar_image"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_default_image"
                android:layout_marginLeft="15dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_play_bar_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toLeftOf="@id/id_play_or_pause"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/id_play_bar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textSize="17dp"
                    android:text="被驯服的象"/>

            <TextView
                    android:id="@+id/id_play_bar_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textSize="10dp"
                    android:text="蔡健雅"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/id_play_or_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/id_current_list"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_button_bg"
                android:scaleType="center"
                android:src="@drawable/ic_play"/>
        <ImageView
                android:id="@+id/id_current_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button_bg"
                android:src="@drawable/ic_play_list"/>

    </RelativeLayout>

</RelativeLayout>
